{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["components/*"],
      "@lib/*": ["lib/*"],
      "@/lib/*": ["lib/*"],
      "@db": ["db"]
    },
    "jsx": "preserve",
    "lib": ["dom", "es2021"],
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "plugins": [{ "name": "next" }]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", ".next/types/**/*.ts"]
}
