{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@db": [
        "src/db"
      ]
    },
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2021"
    ],
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": false,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ]
}